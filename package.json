{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "bootstrap": "sh ./scripts/bootstrap.sh",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "client:dev": "vite",
    "dev": "concurrently -n \"CLIENT,SERVER\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run client:dev\" \"npm run server:dev\"",
    "migrations:create": "./db/golang-migrate/migrate create -ext sql -dir db/migrations -seq",
    "migrations:up": "eval $(cat .env) && ./db/golang-migrate/migrate -database ${NOTES_DB_URL} -path db/migrations up",
    "migrations:down": "eval $(cat .env) && ./db/golang-migrate/migrate -database ${NOTES_DB_URL} -path db/migrations down",
    "prepare": "husky install",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "server:dev": "nodemon -P tsconfig.server.json src/server/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "pg": "^8.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^18.14.6",
    "@types/pg": "^8.6.6",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "vite": "^4.1.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
}
